#! /bin/sh

mkdir -p ~/.config/parsec
LOG_FILE=~/.config/parsec/parsec-core.log
echo Starting parsec core >> $LOG_FILE
${SNAP}/venv/bin/python -m parsec.cli core --log-level=DEBUG --log-file $LOG_FILE --I-am-John -A ${BACKEND_URL} &
sleep 1
core_pid=$!
# ${SNAP}/bin/desktop-launch ${SNAP}/parsec-gui/parsec-gui
${SNAP}/parsec-gui/parsec-gui
/bin/kill $core_pid
